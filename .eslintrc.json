{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "extends": [
        "standard",
        "standard-jsx",
        "standard-react"
    ],
    "plugins": [
        "import",
        "node",
        "promise",
        "standard",
        "react",
        "jsx-a11y"
    ]
}